<header class="header">
    <div class="header__inner">
        <div class="logo">
            <span class="logo__w">W</span>
            <span class="logo__community">community</span>
        </div>
        <nav class="header__nav">
            <ul class="header__ul">
                <li class="header__li">
                    <%= link_to 'Home', main_posts_path %>
                </li>
                <li class="header__li">
                    <%= link_to 'OutGoing', posts_path %>
                </li>
                <li class="header__li">
                    <%= link_to 'MyPage', user_path(current_user.id)%> 
                </li>
                <li class="header__li">
                    <%= link_to (rooms_path) do %>
                        DM<i class="far fa-comment-dots"></i><span class="noti_count"><%= @notifications.count %></span>
                    <% end %>
                </li>
                <li class="header__li">
                    <%= link_to "LogOut", destroy_user_session_path, method: :delete %>
                </li>
            </ul>
        </nav>
    </div>
</header>
<div class="post">
    <h2>新規投稿</h2>
    <div class="post__main">
        <%= form_with model:@post do |f| %>
            <div class="field">
                <%= f.label :theme %>
                <%= f.text_area :theme, class: "post__area" %>
            </div>
            <%= f.submit :投稿, class: "btn shadow" %>
        <% end %>
    </div>
</div>
<%= link_to '投稿一覧へ', posts_path %>
<div class="user-in">
<% @entries.each do |e| %>
    <h3><strong><a href="/users/<%= e.user.id %>"><%= e.user.name%></a></strong></h3>
<% end %>
<p>2人のDM❤️</p>
</div>

<div class="dmMain">
    <% @messages.each do |m| %>
        <p><%= m.body %></p>
        <% if m.user_id != current_user.id %>
            <% if m.notifications.exists? %>
                <%= link_to '既読にする', notification_path(m.id), method: :delete %>
            <% else %>
                <p>既読ずみ</p>
            <% end %>
            <small><%= m.user.name %>さん</small><hr>
        <% end %>
    <% end %>

    <%= form_for @message do |f| %>
    <%= f.text_field :body, :placeholder => "メッセージを入力して下さい" , :size => 100 %>
    <%= f.hidden_field :room_id, :value => @room.id %>
    <br>
    <%= f.submit "送信する" %>
    <% end %>
</div>

<%= link_to "DM一覧に戻る", rooms_path %>
<%= link_to "メインページに戻る", main_posts_path %>
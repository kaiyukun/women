<%= stylesheet_link_tag 'signup', :media => "all" %>

<div class="sign">
<header class="header">
    <div class="header__inner">
        <div class="logo">
            <span class="logo__w">W</span>
            <span class="logo__community">community</span>
        </div>
        <nav class="header__nav">
            <ul class="header__ul">
                
            </ul>
        </nav>
    </div>
</header>
  
  <div class="sign__main">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="signup_email form-floating mb-3">
        <%= f.email_field :email, class:"form-control", id:"floatingInput", placeholder:"name@example.com" %>
        <label for="floatingInput">メールアドレス</label>
      </div>

      <div class="signup_name form-floating mb-3">
        <%= f.text_field :name, class:"form-control", id:"floatingInput", placeholder:"Name" %>
        <label for="floatingInput">ニックネーム</label>
      </div>

      <div class="signup_img">
        <%= f.label :image, "プロフィール画像"%><br />
        <%= f.file_field :image, id:"pac-input", class:"form-control" %>
        <div id="signup_image"></div>
      </div>

      <div class="signup_profile form-floating">
        <%= f.text_area :profile, class:"form-control", placeholder:"Leave a comment here", id:"floatingTextarea", style:"height: 100px" %>
        <label for="floatingTextarea">Comments</label>
      </div>

      <div class="signup_address">
        <%= f.select :address,[
          ["北海道", "北海道"],
          ["青森県", "青森県"],
          ["岩手県", "岩手県"],
          ["宮城県", "宮城県"],
          ["秋田県", "秋田県"],
          ["山形県", "山形県"],
          ["福島県", "福島県"],
          ["茨城県", "茨城県"],
          ["栃木県", "栃木県"],
          ["群馬県", "群馬県"],
          ["埼玉県", "埼玉県"],
          ["千葉県", "千葉県"],
          ["東京都", "東京都"],
          ["神奈川県", "神奈川県"],
          ["新潟県", "新潟県"],
          ["富山県", "富山県"],
          ["石川県", "石川県"],
          ["福井県", "福井県"],
          ["山梨県", "山梨県"],
          ["長野県", "長野県"],
          ["岐阜県", "岐阜県"],
          ["静岡県", "静岡県"],
          ["愛知県", "愛知県"],
          ["三重県", "三重県"],
          ["滋賀県", "滋賀県"],
          ["京都府", "京都府"],
          ["大阪府", "大阪府"],
          ["兵庫県", "兵庫県"],
          ["奈良県", "奈良県"],
          ["和歌山県", "和歌山県"],
          ["鳥取県", "鳥取県"],
          ["島根県", "島根県"],
          ["岡山県", "岡山県"],
          ["広島県", "広島県"],
          ["山口県", "山口県"],
          ["徳島県", "徳島県"],
          ["香川県", "香川県"],
          ["愛媛県", "愛媛県"],
          ["高知県", "高知県"],
          ["福岡県", "福岡県"],
          ["佐賀県", "佐賀県"],
          ["長崎県", "長崎県"],
          ["熊本県", "熊本県"],
          ["大分県", "大分県"],
          ["宮崎県", "宮崎県"],
          ["鹿児島県", "鹿児島県"],
          ["沖縄県", "沖縄県"]
        ], include_blank: "どこにお住まいですか？" %>
      </div>

      <div class="signup_job">
        <%= f.select :job, [["はい", "現役エンジニア"], ["いいえ", "エンジニアではない"]], include_blank: "あなたは現在エンジニアですか？" %>
      </div>

      <div class="signup_genre">
        <%= f.select :genre, [["webアプリケーション開発", "webアプリケーション開発"], ["モバイルアプリ開発エンジニア", "モバイルアプリ開発エンジニア"], ["ゲーム開発エンジニア", "ゲーム開発エンジニア"], ["インフラエンジニア", "インフラエンジニア"], ["エンジニアではないです", "エンジニアではないです"]], include_blank: "エンジニアの方はその種類をお選びください" %>
      </div>

      <div class="signup_history form-floating mb-3">
        <%= f.number_field :history,class:"form-control", id:"floatingInput", placeholder:"history", style:"width: 500px" %><span>年</span>
        <label for="floatingInput">エンジニア歴</label>
      </div>

      <div class="signup_password form-floating">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"floatingPassword", placeholder:"Password" %>
        <label for="floatingPassword">Password</label>
      </div>

      <div class="signup_password2 form-floating">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"floatingPassword", placeholder:"Password" %>
        <label for="floatingPassword">Password(conrirmation)</label>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn shadow" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>

<style>
  #signup_image{
  background-color: rgba(241, 230, 220, 0.661);
  height: 130px;
  width: 130px;
  border-radius: 50%; 
  margin: 0 auto;
  }
  img{
    height: 130px;
    width: 130px;
    border-radius: 50%;
  }
</style>

<script>
    let image = document.getElementById("pac-input");
    image.addEventListener("change", function(evt){
        let file = evt.target.files;
        let reader = new FileReader();
        reader.readAsDataURL(file[0]);
        reader.onload = function(){
            let dataUrl = reader.result;
            document.getElementById("signup_image").innerHTML = "<img src='" + dataUrl + "'>";
        }
    },false);
</script>
